<% if defined?(frontend) and frontend %>
    <li class="<%= 'disabled' if current_page.first? %>">
        <%= link_to raw(t 'views.pagination.first'), current_page.first? ? '#' : url, :remote => remote %>
    </li>
<% else %>
    <span class='first'>
        <%= link_to_unless current_page.first?, raw(t 'views.pagination.first'), url, :remote => remote %>
    </span>
<% end %>
