<% content_for :page_title do %>
    <%= Spree.t('page_contents') %>
<% end %>

<%= render 'spree/admin/pages/sub_menu' %>

<table class='index'>
    <colgroup>
        <col style='width: 60%' />
        <col style='width: 10%' />
    </colgroup>
    <thead>
        <tr>
            <th><%= Spree::Page.human_attribute_name(:title) %></th>
            <th class='actions'></th>
        </tr>
    </thead>
    <tbody>
        <% @page_contents.each do |page| %>
            <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id page %>">
                <td>
                    <%= page.title %>
                </td>
                <td  class='actions'>
                    <%= link_to_edit page, no_text: true %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
