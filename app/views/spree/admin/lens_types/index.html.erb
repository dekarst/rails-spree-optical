<% content_for :page_title do %>
    <%= Spree.t(:lens_types) %>
<% end %>

<% content_for :page_actions do %>
    <li id='new_lens_type_link'>
        <%= button_link_to Spree.t(:new_lens_type), new_admin_lens_type_url, {remote: true, icon: 'icon-plus', 'data-update' => 'new_lens_type', id: 'new_lens_type_link'} %>
    </li>
<% end %>

<%= render 'spree/admin/shared/product_sub_menu' %>

<div id='new_lens_type'></div>

<table class='index' id='listing_lens_types' data-hook>
    <colgroup>
        <col style='width: 85%'>
        <col style='width: 15%'>
    </colgroup>
    <thead>
        <tr data-hook='listing_lens_types_header'>
            <th><%= Spree.t(:name) %></th>
            <th class='actions'></th>
        </tr>
    </thead>
    <tbody>
        <% @lens_types.each do |lens_type| %>
            <tr id='<%= spree_dom_id lens_type %>' data-hook='listing_lens_types_row' class='<%= cycle('odd', 'even')%>'>
                <td style='padding-left:1em'><%= lens_type.name %></td>
                <td class='actions'>
                    <%= link_to_edit(lens_type, no_text: true) %>
                    <%= link_to_delete(lens_type, no_text: true) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

