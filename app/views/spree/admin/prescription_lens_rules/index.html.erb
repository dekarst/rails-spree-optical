<% content_for :page_title do %>
    <%= Spree.t(:prescription_lens_rules) %>
<% end %>

<% content_for :page_actions do %>
    <li id='new_prescription_lens_rule_link'>
        <%= button_link_to Spree.t(:new_prescription_lens_rule), new_admin_prescription_lens_rule_url, {remote: true, icon: 'icon-plus', 'data-update' => 'new_prescription_lens_rule', id: 'new_prescription_lens_rule_link'} %>
    </li>
<% end %>

<%= render 'spree/admin/shared/product_sub_menu' %>

<div id='new_prescription_lens_rule'></div>

<table class='index' id='listing_prescription_lens_rules' data-hook>
    <colgroup>
        <col style='width: 85%'>
        <col style='width: 15%'>
    </colgroup>
    <thead>
        <tr data-hook='listing_prescription_lens_rules_header'>
            <th><%= Spree.t(:rule) %></th>
            <th class='actions'></th>
        </tr>
    </thead>
    <tbody>
        <% @prescription_lens_rules.each do |prescription_lens_rule| %>
            <tr id='<%= spree_dom_id prescription_lens_rule %>' data-hook='listing_prescription_lens_rules_row' class='<%= cycle('odd', 'even')%>'>
                <td style='padding-left:1em'><%= prescription_lens_rule.display %></td>
                <td class='actions'>
                    <%= link_to_edit(prescription_lens_rule, no_text: true) %>
                    <%= link_to_delete(prescription_lens_rule, no_text: true) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

