<% content_for :page_title do %>
    <%= Spree.t(:users) %>
<% end %>

<table class='index' id='listing_users' data-hook>
    <colgroup>
        <col style='width: 85%'>
        <col style='width: 15%'>
    </colgroup>
    <thead>
        <tr data-hook='listing_users_header'>
            <th><%= Spree.t(:email) %></th>
            <th class='actions'></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr id='<%= spree_dom_id user %>' data-hook='listing_users_row' class='<%= cycle('odd', 'even')%>'>
                <td style='padding-left:1em'><%= user.email %></td>
                <td class='actions'>
                    <%= link_to_edit(user, no_text: true) %>
                    <%= link_to_delete(user, no_text: true) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

