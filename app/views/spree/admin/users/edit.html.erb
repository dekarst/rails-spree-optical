<%= render partial: 'spree/admin/shared/user_tabs', locals: {current: 'User Info'} %>

<% content_for :page_title do %>
    <%= Spree.t(:editing_user) %>
<% end %>

<% content_for :page_actions do %>
    <li><%= button_link_to Spree.t(:back_to_users_list), admin_users_url, icon: 'icon-arrow-left'%></li>
<% end %>

<%= render partial: 'spree/shared/error_messages', locals: {target: @user} %>

<%= nested_form_for [:admin, @user] do |f| %>
    <fieldset class='no-border-top'>
        <%= render partial: 'form', locals: {f: f} %>
        <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
<% end %>
