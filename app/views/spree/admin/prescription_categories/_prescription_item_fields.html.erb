<tr class='prescription_item fields' id="spree_<%= dom_id(f.object) %>"  data-hook='prescription_item' class="<%= cycle('odd', 'even')%>">
    <td class='no-border'>
        <span class='handle'></span>
        <%= f.hidden_field :id %>
    </td>
    <td class='name'><%= f.text_field :name %></td>
    <td class='actions'>
        <%= link_to_with_icon('icon-edit', '', edit_admin_prescription_item_url(f.object), class: 'spree_edit_fields no-text with-tip', data: {action: 'edit'}, title: Spree.t(:edit)) if f.object.persisted? %>
        <%= link_to_remove_fields Spree.t(:remove), f, no_text: true %>
    </td>
</tr>
