<% end %>

<%= render partial: 'spree/admin/shared/options_tabs', locals: {product: @lens_thickness, current: 'Details'} %>

<%= render partial: 'spree/shared/error_messages', locals: {target: @lens_thickness} %>

<%= form_for [:admin, @lens_thickness] do |f| %>
