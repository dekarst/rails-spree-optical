<div class='container'>
    <div class='row'>
        <div class='col-md-6 col-md-push-3'>
            <%= simple_form_for @contact do |f| %>
                <%= f.error_notification %>

                <%= f.input :name, required: true, autofocus: true, input_html: {class: 'form-control'} %>
                <%= f.input :email, required: true, input_html: {class: 'form-control'} %>
                <%= f.input :phone, required: true, input_html: {class: 'form-control'} %>
                <%= f.input :subject, required: true, input_html: {class: 'form-control'} %>
                <%= f.input :comment, required: true, input_html: {class: 'form-control', rows: 10} %>

                <div class='form-actions'>
                    <%= f.submit 'Send Message', class: 'btn btn-primary' %>

                    <%= button_tag 'Reset', type: :reset, class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>

