<div class='vsap'></div>
<div class='vsap'></div>

<div id='new-password' class='container'>
    <div class='row wellcome text-center'>
        <h3 class='light-blue'>Forgot your password?</h3>
    </div>

    <div class='vsap'></div>
    <div class='vsap'></div>

    <div class='row well'>
        <div class='col-md-6 col-md-push-3'>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post }) do |f| %>
                <%= f.error_notification %>

                <%= f.input :email, required: true, autofocus: true, input_html: {class: 'form-control'} %>

                <div class='form-actions'>
                    <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
                </div>
            <% end %>

            <%= render 'devise/shared/links' %>
        </div>
    </div>
</div>
